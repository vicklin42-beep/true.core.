        // æ¨¡æ“¬æ›¸ç±è³‡æ–™åº« (æ›´æ–°äº†æ›¸æ³è©•ç´š)
        const mockBooks = [
            { id: 1, title: "å¾®ç©åˆ†ä¸Šå†Š (ç¬¬åç‰ˆ)", course: "æ‡‰ç”¨å¾®ç©åˆ†", teacher: "ä¸æ•™æˆ", version: "2020", price: 350, condition: 'A', stars: 4, inventory: 3, dept: 'IM' },
