        const bookListing = document.getElementById('book-listing');
        const mainSearch = document.getElementById('main-search');
        const bookDetailModal = document.getElementById('bookDetailModal'); // ç¢ºä¿è®Šæ•¸åæ­£ç¢º

        function getStarHtml(stars) {
            return 'â˜…'.repeat(stars) + 'â˜†'.repeat(5 - stars);
        }

        // --- æ ¸å¿ƒå‡½æ•¸ï¼šæ¸²æŸ“æ›¸ç±å¡ç‰‡ ---
        function renderBookCard(book) {
            const isSoldOut = book.inventory === 0;
            const standard = conditionStandards[book.condition];

            const card = document.createElement('a');
            card.className = `book-card ${isSoldOut ? 'sold-out' : ''}`;
            card.setAttribute('data-id', book.id);
            card.onclick = (e) => {
                e.preventDefault();
                if (!isSoldOut) {
                    openBookDetail(book.id); // å‘¼å«è©³ç´°é å‡½æ•¸
                } else {
                    alert('æŠ±æ­‰ï¼Œæ­¤æ›¸å·²å”®ç½„ï¼');
                }
            };
            
            card.innerHTML = `
                <div class="book-title">${book.title}</div>
                <div class="book-info">èª²ç¨‹ï¼š${book.course} (${book.teacher})</div>
                <div class="price-status">
                    <span class="book-price">${isSoldOut ? 'å·²å”®ç½„' : `$${book.price}`}</span>
                    <span class="condition-tag ${standard.color}">${book.condition} ç´š</span>
                </div>
                <div class="inventory" style="${isSoldOut ? 'color: grey; background: #f0f0f0;' : ''}">
                    ${isSoldOut ? 'ç„¡åº«å­˜' : `å‰©é¤˜åº«å­˜ï¼š${book.inventory}`}
                </div>
            `;
            bookListing.appendChild(card);
        }

        // --- åˆå§‹åŒ–é é¢ ---
        function initializeListing(books = mockBooks) {
            bookListing.innerHTML = '';
            books.forEach(renderBookCard);

            if (books.length === 0) {
                bookListing.innerHTML = '<p style="text-align: center; grid-column: 1 / -1; margin-top: 2rem; color: var(--text-light);">æ‰¾ä¸åˆ°ç¬¦åˆæ¢ä»¶çš„æ›¸ç±ã€‚</p>';
            }
        }
        
        // --- æœå°‹åŠŸèƒ½ ---
        function handleSearch() {
            const query = mainSearch.value.trim().toLowerCase();
            const filteredBooks = mockBooks.filter(book => 
                book.title.toLowerCase().includes(query) ||
                book.course.toLowerCase().includes(query) ||
                book.teacher.toLowerCase().includes(query)
            );
            initializeListing(filteredBooks);
        }

        // --- å¿«é€Ÿåˆ†é¡åŠŸèƒ½ ---
        document.querySelectorAll('.category-card').forEach(card => {
            card.addEventListener('click', function(e) {
                e.preventDefault();
                const category = this.getAttribute('data-category');
                let filtered = [];
                if (category === 'Hot') {
                    // æ¨¡æ“¬ç†±é–€ï¼šé«˜åƒ¹æ ¼ä¸”é«˜åº«å­˜çš„æ›¸
                    filtered = mockBooks.filter(book => book.price > 300 && book.inventory > 1);
                } else {
                    filtered = mockBooks.filter(book => book.dept === category);
                }
                initializeListing(filtered);
            });
        });

        // --- æ›¸ç±è©³ç´°é  (Modal) åŠŸèƒ½ ---
        function openBookDetail(bookId) {
            const book = mockBooks.find(b => b.id === bookId);
            if (!book) return;

            const standard = conditionStandards[book.condition];

            // å¡«å…… Modal å…§å®¹
            document.getElementById('detail-title').textContent = book.title;
            document.getElementById('detail-course').textContent = book.course;
            document.getElementById('detail-teacher').textContent = book.teacher;
            document.getElementById('detail-version').textContent = book.version;
            document.getElementById('detail-price').textContent = `$${book.price}`;
            document.getElementById('detail-condition-stars').textContent = getStarHtml(book.stars);
            document.getElementById('detail-condition-text').textContent = `${standard.name}`;
            document.getElementById('detail-condition-description').textContent = `æ¢ä»¶ï¼š${standard.description}`; // æ–°å¢æè¿°
            document.getElementById('detail-meetup-info').innerHTML = `
                <p><strong>é¢äº¤åœ°é»ï¼š</strong> å°ç§‘å¤§åœ–æ›¸é¤¨ä¸€æ¨“ / æ ¡é–€å£ (å¯å½ˆæ€§)</p>
                <p><strong>å»ºè­°é¢äº¤æ™‚é–“ï¼š</strong> æ¯é€±ä¸€ã€ä¸‰ 18:00-19:00ï¼›æˆ–æœŸåˆ / æœŸæœ«æ´»å‹•æœŸé–“ã€‚</p>
            `;

            bookDetailModal.style.display = 'block';
        }

        function closeModal(event) {
            if (event === undefined || event.target === bookDetailModal || event.target.className === 'modal-close') {
                bookDetailModal.style.display = 'none';
            }
        }

        function handleAddToCart() {
            alert("å·²æˆåŠŸåŠ å…¥è³¼ç‰©è»Šï¼(æ¨¡æ“¬åŠŸèƒ½)\næ¥ä¸‹ä¾†å°‡é€²å…¥çµå¸³æµç¨‹...");
            closeModal();
        }

        // ç›£è½ ESC éµé—œé–‰ Modal
        window.onkeydown = function(event) {
            if (event.key === 'Escape' && bookDetailModal.style.display === 'block') {
                closeModal();
            }
        };

        // å•Ÿå‹•ç¶²ç«™
        window.onload = () => initializeListing();

    </script>
</body>
